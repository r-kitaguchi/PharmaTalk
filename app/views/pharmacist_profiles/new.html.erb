<% provide(:title, "プロフィール登録") %>
<%= render "shared/error_messages", resource: @pharmacist_profile %>
<%= render "shared/flash" %>
<div class="form_profile">
  <h2>プロフィール登録</h2>
  <%= form_with model: @pharmacist_profile do |f| %>
    <%= f.hidden_field :name, value: "テスト太郎" %>
    <%= f.hidden_field :work_place, value: "テスト薬局" %>
    <%= f.hidden_field :work_place_type, value: "調剤薬局" %>
    <%= f.hidden_field :work_location, value: "北海道" %>
    <%= f.hidden_field :university, value: "テスト大学" %>
    <%= f.hidden_field :introduction, value: "テストテスト" %>
    <%= f.submit "テストプロフィールで登録", class: "test_profile" %>
  <% end %>
  <div class="form_contents">
    <%= form_with model: @pharmacist_profile do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ファーマ太郎" %>

      <%= f.label :image %>
      <%= f.file_field :image %>

      <%= f.label :work_place %>
      <%= f.text_field :work_place, placeholder: "Pharma薬局" %>

      <%= f.label :work_place_type %>
      <div class="work_place_type">
        <%= f.radio_button :work_place_type, :調剤薬局, checked: "checked" %>
        <%= f.label :work_place_type_調剤薬局, "調剤薬局" %>
        <%= f.radio_button :work_place_type, :ドラッグストア %>
        <%= f.label :work_place_type_ドラッグストア, "ドラッグストア" %>
        <%= f.radio_button :work_place_type, :病院 %>
        <%= f.label :work_place_type_病院, "病院" %>
      </div>

      <%= f.label :work_location %>
      <%= f.select :work_location, PharmacistProfile.work_locations.keys, {} %>

      <%= f.label :university %>
      <%= f.text_field :university, placeholder: "Pharma大学" %>

      <%= f.label :introduction %>
      <%= f.text_area :introduction %>

      <%= f.submit "登録", class: "btn" %>
    <% end %>
  </div>
</div>
