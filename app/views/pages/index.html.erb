<% provide :concept do %>
  <i class="fas fa-comments"></i><%= link_to "Pharma Talkについて", concepts_path %>
<% end %>
<div class="home_header">
  <div class="home_header_content">
    <p>先輩の声を聞いて</p>
    <p>薬局の雰囲気をつかもう</p>
    <%= image_tag 'Chat.png', class: 'top_image' %>
    <% if no_one_is_logged_in%>
      <div class="btn js_sign_up">新規登録</div>
    <% end %>
  </div>
</div>
<%= render "shared/flash" %>
<main>
  <h2>先輩を探す</h2>
  <%= search_form_for @q, url: search_pharmacist_profiles_path do |f| %>
    <p><i class="fas fa-pencil-alt" aria-hidden="true"></i>フリーワード</p>
    <div class="search_field">
      <%= f.search_field :name_or_work_place_or_university_cont %>
    </div>
    <p><i class="fas fa-clinic-medical" aria-hidden="true"></i>勤務先タイプ</p>
    <div class="search_checkbox">
      <label>
        <%= f.check_box :work_place_type_eq_any, { multiple: true }, "調剤薬局", nil %>
        調剤薬局
      </label>
      <label>
        <%= f.check_box :work_place_type_eq_any, { multiple: true }, "ドラッグストア", nil %>
        ドラッグストア
      </label>
      <label>
        <%= f.check_box :work_place_type_eq_any, { multiple: true }, "病院", nil %>
        病院
      </label>
    </div>
    <p><i class="fas fa-map-marker-alt" aria-hidden="true"></i>エリア</p>
    <div class="search_prefectures">
      <%  PharmacistProfile.work_locations.keys.each_with_index do |key, i| %>
        <% next if i.zero? %>
        <label>
          <%= f.check_box :work_location_eq_any,{ multiple: true }, i, nil %>
          <%= key %>
        </label>
      <% end %>
    </div>
      <%= f.submit "検索" %>
  <% end %>
</main>
<%= render "shared/sign_up_modal" %>
<%= render "shared/log_in_modal" %>
