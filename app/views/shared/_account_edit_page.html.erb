<% provide(:title, "アカウント編集") %>
<% content_for :js do %>
  <%= javascript_pack_tag 'accounts/delete', 'data-turbolinks-track': 'reload' %>
<% end %>
<div class="form">
  <h2>アカウント編集</h2>

  <div class="form_contents">
    <%= form_with model: resource, scope: resource_name, url: registration_path(resource_name), method: :put do |f| %>
      <%= render "shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> (パスワードを変更しない場合は入力不要)<br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %> (パスワードを変更しない場合は入力不要)<br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "更新", class: "btn"%>
      </div>
    <% end %>

    <p>アカウントを削除して退会する</p>

    <p class="cancel_btn js_account_delete">アカウント削除</p>
      <%= render "shared/account_delete_modal", resource: resource %>
  </div>
</div>
